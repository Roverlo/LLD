{
  "name": "zteusmartviewlld",
  "version": "1.0.2",
  "description": "ZTE uSmartView LLD Generator",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish never",
    "pack": "electron-packager . ZTEuSmartViewLLD --platform=win32 --arch=x64 --out=dist --overwrite --ignore=node_modules/electron-builder --ignore=coverage --ignore=src/__tests__ --ignore=.git --icon=build/icon.ico",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css}\"",
    "build:renderer": "esbuild src/renderer/modules/app.js --bundle --outfile=src/renderer/bundle.js --minify",
    "quality:check": "yarn lint && yarn format:check && yarn test:coverage",
    "clean": "rm -rf dist node_modules yarn.lock package-lock.json",
    "yarn:install": "yarn install",
    "yarn:dist": "yarn dist"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "electron": "22.0.0",
    "electron-builder": "^22.14.13",
    "electron-packager": "^17.1.2",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "author": {
    "name": "ZTE",
    "email": "dev@zte.com.cn"
  },
  "build": {
    "electronVersion": "22.0.0",
    "appId": "com.zte.usmartview.lld",
    "productName": "ZTEuSmartViewLLD",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/combined.ico"
    },
    "forceCodeSigning": false,
    "compression": "store"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "collectCoverageFrom": [
      "src/main/managers/**/*.js",
      "src/main/services/**/*.js",
      "src/main/utils/**/*.js",
      "src/main/validators/**/*.js",
      "src/main/generators/**/*.js",
      "src/main/constants/**/*.js",
      "!src/__tests__/**",
      "!src/**/node_modules/**",
      "!src/preload.js",
      "!src/main/main.js",
      "!src/main/generator.js",
      "!src/main/worker.js",
      "!src/renderer/**",
      "!src/main/services/logger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 65,
        "statements": 65
      },
      "./src/main/managers/": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "./src/main/utils/": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      },
      "./src/main/validators/": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
