{
  "name": "zteusmartviewlld",
  "version": "1.0.2",
  "description": "ZTE uSmartView LLD Generator",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish never",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css}\"",
    "quality:check": "yarn lint && yarn format:check && yarn test:coverage",
    "clean": "rm -rf dist node_modules yarn.lock package-lock.json",
    "yarn:install": "yarn install",
    "yarn:dist": "yarn dist"
  },
  "dependencies": {
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "electron": "22.0.0",
    "electron-builder": "^22.14.13",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "prettier": "^3.2.5"
  },
  "author": {
    "name": "ZTE",
    "email": "dev@zte.com.cn"
  },
  "build": {
    "electronVersion": "22.0.0",
    "appId": "com.zte.usmartview.lld",
    "productName": "ZTEuSmartViewLLD",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.png"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/renderer/fluid.js",
      "!src/**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
